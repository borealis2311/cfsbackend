<%- include("../layout/Header.ejs", {title: "Add new category"})%>

<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4"></div>
</div>
<section class="position-relative py-4 py-xl-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2>Add category</h2>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-md-6 col-xl-4">
                <form class="text-center" role="form" method="post" action="/admin/categories/store">
                    <% if(data && data.error){ %>
                        <div class="alert alert-danger"><%=data.error%></div>
                    <% }%>
                    <div class="mb-3"><input class="form-control" type="text" placeholder="Category name" name="title"></div>
                    <div class="mb-3"></div>
                    <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Login</button></div>
                </form>
            </div>
        </div>
    </div>
</section>


<%- include("../layout/Footer.ejs")%>      