<%- include("../layout/Header.ejs", {title: "Add new product"})%>

<div class="container-fluid">
    <div class="d-sm-flex justify-content-between align-items-center mb-4"></div>
</div>
<section class="position-relative py-4 py-xl-5">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <h2>Edit product "<%=products.name%>"</h2>
            </div>
        </div> 
    </div>
    <div class="container-fluid">
        <form role="form" action="/admin/products/update/<%=products._id%>" method="post" enctype="multipart/form-data" >
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <div class="mb-3"><label class="form-label"><strong>Name</strong></label>
                        <input class="form-control" type="text" name="name" value="<%=products.name%>" required></div>
                </div>
                <div class="col"><label class="form-label"><strong>Price</strong></label>
                    <input class="form-control" type="text" name="price" value="<%=products.price%>" required></div>
                    <div>
                        <img src="../../upload/products/<%=products.image%>" height=210>
                    </div>
            </div>
            <div class="mb-3"><label class="form-label"><strong>Image</strong></label>
                <input class="form-control" type="file" name="image"></div>
            <div class="row mb-2">
                <div class="col">
                    <div class="mb-3"><label class="form-label"><strong>Category</strong></label>
                        <select name="category_id" class="form-control">
                            <% for(category of categories){ %>
                                <option <%=category.id==products.category_id? "selected": ""%> value="<%=category._id%>"><%=category.title%></option>
                            <% } %>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="mb-3"><label class="form-label"><strong>Description</strong></label>
                        <textarea class="form-control" type="text" name="description" required><%=products.description%></textarea>
                    </div>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col">
                    <div class="mb-3" style="margin-top: 40px;"><label class="form-label"><strong>Featured</strong></label>
                        <input <%=products.featured==true? "checked": "" %> type="checkbox" value="yes" name="featured" style="margin-left: 22px;"></div>
                </div>
                <div class="col">
                    <div class="mb-3" style="margin-top: 40px;"><label class="form-label"><strong>Is Stock</strong></label>
                        <input <%=products.is_stock==true? "checked": "" %> type="checkbox" value="yes" name="is_stock" style="margin-left: 22px;"></div>
                </div>
            </div>
            <button class="btn btn-primary btn-lg" type="submit">Submit</button>
        </form>
    </div>  
</section>

<%- include("../layout/Footer.ejs")%>
